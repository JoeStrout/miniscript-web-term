{
  "name": "miniscript-web-term",
  "version": "0.1.0",
  "description": "A web-based MiniScript terminal runner",
  "author": "Sebastian Nozzi",
  "license": "MIT",
  "keywords": [
    "miniscript",
    "xtermjs",
    "runner",
    "commandline",
    "terminal"
  ],
  "files": [
    "dist"
  ],
  "bin": {
    "miniscript-nodejs": "./dist/run.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --sourcemap --global-name=MSTerm --outfile=dist/miniscript-web-term.js",
    "build-watch": "esbuild src/index.ts --bundle --sourcemap --global-name=MSTerm --outfile=dist/miniscript-web-term.js --watch",
    "emit-types": "tsc --project tsconfig.declarations.json"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.29",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.4",
    "esbuild": "0.19.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@xterm/xterm": "^5.4.0-beta.1",
    "@zip.js/zip.js": "^2.7.34",
    "miniscript-ts": "file:../miniscript.ts",
    "xterm-readline": "^1.1.1"
  }
}
